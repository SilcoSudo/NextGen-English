{
  "apps": [
    {
      "name": "nextgen-english",
      "script": "server.js",
      "cwd": "./backend",
      "instances": 2,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 5000
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 5000
      },
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "./logs/nextgen-english-error.log",
      "out_file": "./logs/nextgen-english-out.log",
      "log_file": "./logs/nextgen-english-combined.log",
      "time": true,
      "autorestart": true,
      "max_restarts": 5,
      "min_uptime": "10s",
      "max_memory_restart": "1G",
      "node_args": "--max-old-space-size=1024",
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs",
        "uploads"
      ]
    }
  ]
}